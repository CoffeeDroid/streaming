<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <RelativeLayout android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="@color/white" android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Status" android:singleLine="true" android:layout_toLeftOf="@+id/mrb_cast" android:layout_toRightOf="@+id/iv_back" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_back" android:background="@drawable/selector_light" android:padding="7dp" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="10dp" android:src="@drawable/btn_close_white" android:layout_centerVertical="true"/>
        <android.support.p003v7.app.MediaRouteButton android:layout_gravity="center_horizontal" android:id="@+id/mrb_cast" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:layout_width="120dp" android:layout_height="120dp" android:src="@drawable/ico_chromecast"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_status" android:background="@drawable/selector_cast" android:visibility="gone" android:layout_width="100dp" android:layout_height="100dp" android:text="CAST" android:singleLine="true"/>
        <TextView android:textSize="14sp" android:textColor="#ccffffff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_player_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="PREPARING" android:maxLines="2"/>
    </LinearLayout>
</RelativeLayout>
