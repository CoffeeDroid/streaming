<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_url" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <EditText android:textColor="#aa000000" android:textColorHint="#55000000" android:id="@+id/et_url" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="URL" android:singleLine="true" android:selectAllOnFocus="true" android:imeOptions="actionUnspecified|actionGo|flagNoExtractUi"/>
            <TextView android:textStyle="bold" android:textColor="#aa000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:text="Supported Protocols"/>
            <TextView android:textColor="#aa000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:text="LIVE (MDC Protocol)"/>
            <TextView android:textColor="#aa000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="HTTP - RTSP - RTMP"/>
            <TextView android:textColor="#aa000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="RTMPE - RTMPS - WMRTMP"/>
            <TextView android:textColor="#aa000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="MMS - MMSH - MMST "/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_name" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textColor="#aa000000" android:textColorHint="#55000000" android:id="@+id/et_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Name" android:singleLine="true" android:selectAllOnFocus="true" android:imeOptions="actionUnspecified|actionGo|flagNoExtractUi"/>
        </LinearLayout>
        <CheckBox android:textColor="#aa000000" android:id="@+id/cb_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="Create a impressive name for this URL"/>
    </LinearLayout>
</ScrollView>
