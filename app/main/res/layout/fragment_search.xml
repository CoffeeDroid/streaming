<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:background="@drawable/bg_header" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="#aaffffff" android:id="@+id/cancel" android:background="@drawable/selector_light" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Cancel" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <EditText android:textSize="14sp" android:textColor="@color/white" android:id="@+id/et_search" android:background="@drawable/bg_et_search" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="@dimen/search_edt_height" android:layout_marginLeft="15dp" android:layout_marginTop="7dp" android:layout_marginRight="10dp" android:layout_marginBottom="7dp" android:hint="Search channels" android:singleLine="true" android:layout_toLeftOf="@+id/cancel" android:layout_centerVertical="true" android:imeOptions="actionDone">
                <requestFocus/>
            </EditText>
        </RelativeLayout>
        <View android:id="@+id/indicator" style="@style/indicator_header"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#aaffffff" android:id="@+id/recent" android:padding="5px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="History"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <ListView android:id="@+id/lv_channel" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null" android:dividerHeight="1px"/>
            <TextView android:textSize="14sp" android:textColor="#aaffffff" android:gravity="center" android:id="@+id/tv_no_channel" android:layout_width="match_parent" android:layout_height="match_parent" android:text=""/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
